<div class="main posts-index">
  <div class="container">
    <div class="posts-index-grid">
      <% @posts.each do |post| %>
        <div class="posts-index-item">
          <%= link_to(post.content, "/posts/#{post.id}", class: "post-content") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
